<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    tools:context=".DeleteNoteActivity">

    <Spinner
        android:id="@+id/spDeleteSelection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.349"
        tools:layout_editor_absoluteX="0dp" />

    <Button
        android:id="@+id/btnDelete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="166dp"
        android:layout_marginLeft="166dp"
        android:layout_marginTop="136dp"
        android:onClick="onDeleteNoteClick"
        android:text="@string/btn_delete_caption"
        app:layout_constraintStart_toStartOf="@+id/spDeleteSelection"
        app:layout_constraintTop_toTopOf="@+id/spDeleteSelection" />

    <TextView
        android:id="@+id/tvChooseToDelete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="136dp"
        android:layout_marginEnd="192dp"
        android:layout_marginBottom="87dp"
        android:text="@string/choose_the_note_to_delete_caption"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/spDeleteSelection"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />
</androidx.constraintlayout.widget.ConstraintLayout>